##########################################
#### BACKENDLAYOUT: DEFAULT 2 COLUMNS ####
##########################################
mod {
    web_layout {
        BackendLayouts {
            default_2_columns {
                title = LLL:EXT:{{ package.applicationName }}/Resources/Private/Language/Backend.xlf:backend_layout.default_2_columns
                config {
                    backend_layout {
                        colCount = 6
                        rowCount = 2
                        rows {
                            1 {
                                columns {
                                    1 {
                                        name = LLL:EXT:{{ package.applicationName }}/Resources/Private/Language/Backend.xlf:backend_layout.column.normal
                                        colPos = 0
                                        colspan = 4
                                    }
                                    2 {
                                        name = LLL:EXT:{{ package.applicationName }}/Resources/Private/Language/Backend.xlf:backend_layout.column.right
                                        colPos = 2
                                        colspan = 2
                                    }
                                }
                            }
                        }
                    }
                }
                icon = EXT:{{ package.applicationName }}/Resources/Public/Images/BackendLayouts/default_2_columns.gif
            }
        }
    }
}